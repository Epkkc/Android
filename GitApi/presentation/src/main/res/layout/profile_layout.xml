<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/profile_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/profile_img"
            android:layout_alignTop="@+id/profile_img"/>

        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_username"
            android:layout_alignStart="@+id/profile_username"/>

        <TextView
            android:id="@+id/profile_type"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/profile_bio"
            android:layout_alignStart="@+id/profile_bio" />

        <TextView
            android:id="@+id/profile_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_type"
            android:layout_alignStart="@+id/profile_type"/>

        <TextView
            android:id="@+id/profile_followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_company"
            android:layout_alignStart="@+id/profile_company"/>

    </RelativeLayout>

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_followers"/>


</LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>